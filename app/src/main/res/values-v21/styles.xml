<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GruppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryT</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimaryT</item>
        <item name="android:colorForeground">@color/colorForground</item>
        <!-- Window transitions. not working :( -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@android:transition/explode</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/explode</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorForground</item>
    </style>
</resources>