<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.c4q.capstone.userinterface.user.UserProfileActivity">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:layout_marginTop="20dp"
        android:id="@+id/sticky_switch"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        app:ss_animationDuration="600"
        app:ss_animationType="line"
        app:ss_iconPadding="14dp"
        app:ss_iconSize="19dp"
        app:ss_leftIcon="@drawable/ic_event_available_black_24dp"
        app:ss_leftText="Events"
        app:ss_rightIcon="@drawable/ic_group_black_24dp"
        app:ss_rightText="Groups"
        app:ss_selectedTextSize="12sp"
        app:ss_sliderBackgroundColor="@color/light_salmon"
        app:ss_switchColor="@android:color/white"
        app:ss_textColor="@android:color/black"
        app:ss_textSize="12sp" />

    <FrameLayout
        android:id="@+id/up_bottom_frag_cont"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingactionb"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
      android:src="@drawable/ic_plus_sign_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>


    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->



