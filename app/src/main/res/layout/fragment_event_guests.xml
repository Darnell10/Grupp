<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding"
    tools:context="com.example.c4q.capstone.userinterface.events.eventfragments.EventGuestsFragment">
    <TextView
        android:text="Event Guests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="center"
        android:padding="@dimen/layout_padding"
        android:textColor="@color/colorAppGrey"
        android:drawableBottom="@drawable/textviewlinedivider"
        android:drawablePadding="@dimen/layout_item_margin"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
