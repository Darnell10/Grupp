<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.c4q.capstone.userinterface.events.createevent.CreateEventInviteFragment">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite Friends"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:padding="@dimen/layout_padding"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/invite_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
