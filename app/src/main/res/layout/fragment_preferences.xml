<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.c4q.capstone.userinterface.user.userprofilefragments.PreferencesFragment">


    <LinearLayout
        android:id="@+id/user_preferences"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What kind of bars do you prefer?" />

        <RadioButton
            android:id="@+id/beer_pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beer Bar" />

        <RadioButton
            android:id="@+id/lounge_pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lounge" />

        <RadioButton
            android:id="@+id/club_pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clubs" />

        <RadioButton
            android:id="@+id/karaoke_pref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karaoke" />


    </LinearLayout>


</FrameLayout>
